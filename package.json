{
  "name": "detect-flash",
  "version": "0.1.0",
  "description": "A library to detect if Adobe Flash plugin is really alive in a web browser",
  "main": "lib/detect-flash.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "babel detect-flash.js --out-dir lib --source-maps inline && npm run build-swf",
    "build-swf": "mxmlc --output=lib/FlashDetector.swf FlashDetector.as",
    "demo": "npm run build && cp -r lib demo && browserify demo/demo.js -o demo/lib/demo.js && simple-http-connect -p 8000 -d demo",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ygoto3/detect-flash.git"
  },
  "keywords": [
    "flash",
    "swf",
    "javascript"
  ],
  "author": "Yusuke Goto",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ygoto3/flash-detector/issues"
  },
  "homepage": "https://github.com/ygoto3/flash-detector#readme",
  "devDependencies": {
    "babel-preset-es2015": "^6.18.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.1",
    "eslint": "^3.11.1",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "flex-sdk": "^4.6.0-0",
    "simple-http-connect": "0.0.3"
  },
  "dependencies": {
    "swfobject": "^2.2.1"
  }
}
